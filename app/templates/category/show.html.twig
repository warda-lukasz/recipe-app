{% extends 'base.html.twig' %}

{% block title %}{{ category.name ?? 'Category' }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Lewa kolumna z obrazkiem -->
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">{{ category.name }}</h2>
                </div>
                <div class="card-body p-2 text-center">
                    {% if category.thumb %}
                        <img src="{{ asset(category.thumb) }}" alt="{{
                        category.name }}" class="img-fluid rounded">
                    {% else %}
                        <img src="{{ asset('images/placeholder.jpg') }}" alt="Brak zdjÄ™cia" class="img-fluid rounded">
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Description</h3>
                </div>
                <div class="card-body">
                    <p>{{ category.description }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 text-end">
        <div class="col-12">
            <a href="{{ path('category_list') }}" class="btn
            btn-primary">Category list</a>
        </div>
    </div>
</div>
{% endblock %}
