{% extends 'base.html.twig' %}

{% block title %}{{ ingredient.name ?? 'Category' }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Lewa kolumna z obrazkiem -->
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">{{ ingredient.name }}</h2>
                </div>
                <div class="card-body p-2 text-center">
                        <img src="{{ thumbnail }}" 
                        alt="{{ ingredient.name }}" class="img-fluid rounded">
                </div>
            </div>
        </div>

        <div class="col-md-7">
            {% if ingredient.description %}
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">Description</h3>
                    </div>
                    <div class="card-body">
                        <p>{{ ingredient.description }}</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row mt-4 text-end">
        <div class="col-12">
            <a href="{{ path('ingredient_list') }}" class="btn
            btn-primary">Ingredient list</a>
        </div>
    </div>
</div>
{% endblock %}
