{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Recipe' }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Lewa kolumna z obrazkiem -->
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">{{ recipe.title }}</h2>
                </div>
                <div class="card-body">
                    {% include 'partial/recipe/details.html.twig' with { recipe: recipe } %}
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body p-0">
                    {% if recipe.mealThumb %}
                        <img src="{{ asset(recipe.mealThumb) }}" alt="{{
                        recipe.title }}" class="img-fluid rounded">
                    {% else %}
                        <img src="{{ asset('images/placeholder.jpg') }}" alt="Brak zdjęcia" class="img-fluid rounded">
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Details</h3>
                </div>
                <div class="card-body">
                    <h4>Ingredients</h4>
                    <ul class="list-group">
                        {% if recipe.measurements is defined and recipe.measurements|length > 0 %}
                            {% for measurement in recipe.measurements %}
                                <li class="list-group-item">
                                    <strong>
                                        <a href="{{ path('ingredient_show', { id: measurement.ingredient.id }) }}">
                                            {{ measurement.ingredient.name }}:
                                        </a>
                                    </strong>
                                    {{ measurement.measure }}
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="list-group-item">Brak danych o składnikach</li>
                        {% endif %}
                    </ul>

                    <h4 class="mt-4">Instructions</h4>
                    <p>{{ recipe.instructions }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 text-end">
        <div class="col-12">
            <a href="{{ path('recipe_list') }}" class="btn btn-primary">Recipes list</a>
            <button class="btn btn-success">♥️ Add to favourites</button>
        </div>
    </div>
</div>
{% endblock %}
