{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Recipes' }}{% endblock %}

{% block content %}
<div class="container w-75">
    <h1 class="mt-4 mb-4">Recipe List:</h1>
    <div class="row">
        {% for recipe in recipes %}
            <div class="card m-3 p-3" style="width: 30%;">
                <h5 class="card-title text-center p-2">{{ recipe.title }}</h5>
              <img src="{{ recipe.mealThumb }}" class="card-img-top" alt="{{
              recipe.title }}">
              <div class="card-body pb-0">
                <p class="card-text fw-light">
                    <strong>Category:</strong> <a href="{{ path('category_show',
                    { id: recipe.category.id }) }}">{{ recipe.category.name }}</a>
                    <strong>Area:</strong> {{ recipe.area }}
                </p>
                <small class="fw-lighter">
                    {% if recipe.tags is not empty %}
                        Tags:{{ recipe.tags }}
                    {% endif %}
                </small>

                <br>
                <div class="my-2 d-flex justify-content-between"> 
                    <a href="{{ path('recipe_show', { id: recipe.id }) }}"
                    class="btn btn-dark w-50 mx-2">üîç Details</a>
                    <button class="btn btn-dark w-50 mx-2 favouriteBtn">‚ô•Ô∏è Favourite</button>
                </div>
              </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

